<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <title>Login</title>
  </head>
  <body>
    <!-- Header -->
    <%- include('header') %>

    <div class="authCard">
      <div class="authCardBody">
        <!-- Make POST request to /login route -->
        <form action="/login" method="POST">
          <div class="form-group">
            <!-- Username -->
            <label for="user_id">Username</label>
            <input
              type="user_id"
              class="form-control"
              name="user_id"
              required
            />
          </div>
          <div class="form-group">
            <!-- Password -->
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              required
            />
          </div>
          <button type="submit" class="loginBtn">Login</button>
        </form>
      </div>
    </div>
  </body>
  <!-- Footer -->
  <%- include('footer') %>
</html>
